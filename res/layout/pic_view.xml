<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:focusable="true"   
android:focusableInTouchMode="true"
>
    <Button
        android:id="@+id/addPic"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/add" />

    <ListView
        android:id="@+id/picListView"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_alignParentLeft="true"
        
        android:layout_below="@+id/addPic"
        android:fastScrollEnabled="true"
        android:focusable="true" >
    </ListView>

    <Button
        android:id="@+id/picReturn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/retu" />

    <EditText
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/picReturn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/addPic"
        android:layout_toRightOf="@+id/picReturn"
        android:gravity="center"
        android:textSize="20sp"
        android:text="" />

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" />
</RelativeLayout>
